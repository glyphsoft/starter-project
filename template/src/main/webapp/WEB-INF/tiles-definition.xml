<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
       
<tiles-definitions>

  <definition name="baseLayout" template="/WEB-INF/layout/baseLayout.jsp">
      <put-attribute name="title"  value="Template"/>
      <put-attribute name="header" value="/WEB-INF/layout/header.jsp"/>
      <put-attribute name="menu" value="/WEB-INF/layout/menu.jsp"/>
  </definition>
  
  <definition name="loginLayout" template="/WEB-INF/layout/loginLayout.jsp">
      <put-attribute name="title"  value="Template"/>
  </definition>
  
  <definition name="login" extends="loginLayout">
      <put-attribute name="title"  value="Login"/>
      <put-attribute name="body"   value="/WEB-INF/view/login.jsp"/>      
  </definition>
  
  <definition name="register" extends="baseLayout">
      <put-attribute name="title"  value="Welcome"/>
      <put-attribute name="body"   value="/WEB-INF/view/register.jsp"/>      
  </definition>
  
</tiles-definitions>